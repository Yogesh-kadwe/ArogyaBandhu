  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": ["navigate-existing", "focus-existing"]
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "display_override": {
    "standalone": "standalone",
    "minimal-ui": "minimal-ui",
    "fullscreen": "fullscreen"
  },
  "protocol_handlers": [
    {
      "protocol": "web+arogyabandhu",
      "url": "/patient-dashboard.html?handle=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "open",
      "accept": {
        "medical_records": ".json,.xml"
      }
    }
  ],
  "share_target": {
    "action": "share-handler",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "ArogyaBandhu Health Record",
      "text": "Share health data",
      "url": "https://arogyabandhu.health/share",
      "files": [
        {
          "name": "health_record",
          "accept": [".json", ".xml", ".csv"]
        }
      ]
    }
  },
  "share_handler": {
    "action": "share-health-data",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "ArogyaBandhu Health Data",
      "text": "Import health records",
      "url": "/import-health-data",
      "files": [
        {
          "name": "health_records",
          "accept": [".json", ".xml", ".csv"]
        }
      ]
    }
  },
  "background": {
    "service_worker": "/sw-enhanced.js",
    "type": "module"
  },
  "offline_enabled": true,
  "storage": {
    "managed_schema": "managed_storage_schema.json"
  },
  "permissions": {
    "storage": {
      "description": "Store health data and preferences"
    },
    "geolocation": {
      "description": "Access location for nearby healthcare services"
    },
    "notifications": {
      "description": "Send health alerts and reminders"
    },
    "camera": {
      "description": "Capture medical documents and symptoms"
    },
    "microphone": {
      "description": "Voice input for symptom description"
    }
  },
  "privacy_policy": "https://arogyabandhu.health/privacy",
  "developer": {
    "name": "ArogyaBandhu Health Team",
    "url": "https://arogyabandhu.health"
  }
}
